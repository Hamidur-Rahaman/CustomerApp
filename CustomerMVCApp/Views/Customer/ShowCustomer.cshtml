@using System.Data

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowCustomer</title>
</head>
<body>
<div>
    <table border="1">
        <tr>
            <th>SI No</th>
            <th>Name</th>
            <th>Code</th>
            <th>Address</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Age</th>
            <th>LoyalityPoint</th>
        </tr>
        @{
            int i = 1;
            foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@i</td>
                    <td>@row["Name"]</td>
                    <td>@row["Code"]</td>
                    <td>@row["Address"]</td>
                    <td>@row["Email"]</td>
                    <td>@row["Contact"]</td>
                    <td>@row["Age"]</td>
                    <td>@row["LoyalityPoint"]</td>
                </tr>
                i++;

            }
        }
    </table>
</div>
</body>
</html>
